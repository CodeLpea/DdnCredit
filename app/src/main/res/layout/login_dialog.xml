<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logindialog_shape_corners"
    >
    <EditText
        android:id="@+id/et_passwd_input"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:gravity="center"
        android:hint="请输入密码"
        android:textColorHint="@color/white"
        android:textColor="@color/texthit"
        android:textSize="60px"
        android:background="@drawable/edit_textshape"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"/>
    <!--确定按钮-->
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/et_passwd_input"
        android:layout_marginTop="60px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:text="确定"
        android:textSize="60px"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/button_selector"/>
    <!--取消按钮-->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@+id/btn_sure"
        android:layout_marginTop="60px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:text="取消"
        android:textSize="60px"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/button_selector"/>

</RelativeLayout>